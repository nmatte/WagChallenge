<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/user_name"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/gold_count"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/goldBadge"
        android:layout_below="@+id/user_name"
        />

    <TextView
        android:id="@+id/silver_count"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/silverBadge"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@+id/gold_count"
        />

    <TextView
        android:id="@+id/bronze_count"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bronzeBadge"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@id/silver_count"
        />
</RelativeLayout>
